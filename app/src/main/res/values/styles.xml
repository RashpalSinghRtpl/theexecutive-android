<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_black_color</item>
        <item name="colorPrimaryDark">@color/theme_black_color</item>
        <item name="colorAccent">@color/theme_accent_color</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>

    </style>

    <style name="toolbar" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/toolBarColor</item>
        <item name="colorPrimaryDark">@color/toolBarColor</item>
        <item name="colorAccent">@color/toolBarColor</item>
        <item name="android:longClickable">false</item>
        <item name="android:selectable">false</item>
    </style>

    <style name="myAppTheme" parent="AppTheme">
        <item name="colorPrimary">@color/theme_black_color</item>
        <item name="colorPrimaryDark">@color/theme_black_color</item>
        <item name="colorAccent">@color/theme_accent_color</item>
    </style>

    <style name="bottomNavigationViewStyle" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/dax_light</item>
        <item name="android:textSize">@dimen/design_bottom_navigation_text_size</item>
    </style>

    <style name="tilTheme" parent="myAppTheme">
        <item name="android:textColorHint">@color/theme_accent_color</item>
    </style>

</resources>
