<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_black_color</item>
        <item name="colorPrimaryDark">@color/theme_black_color</item>
        <item name="colorAccent">@color/theme_accent_color</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:textColor">@color/theme_black_color</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

    </style>

    <style name="myAppTheme" parent="AppTheme">
        <item name="colorPrimary">@color/theme_black_color</item>
        <item name="colorPrimaryDark">@color/theme_black_color</item>
        <item name="colorAccent">@color/theme_accent_color</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textSize">@dimen/text_size_regular</item>
        <item name="android:textColor">@color/theme_black_color</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="tilTheme" parent="myAppTheme">
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:textSize">@dimen/text_size_regular</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="MaterialDialogSheet" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/MaterialDialogSheetAnimation</item>
    </style>

    <style name="MaterialDialogSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>


    <style name="button_theme" parent="Widget.AppCompat.Button.Colored">
        <item name="colorPrimary">@color/theme_black_color</item>
        <item name="colorPrimaryDark">@color/theme_black_color</item>
        <item name="colorAccent">@color/theme_accent_color</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.2</item>
    </style>

    <style name="heading_theme" parent="myAppTheme">
        <item name="android:textSize">@dimen/text_size_heading</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="sub_heading_theme" parent="myAppTheme">
        <item name="android:textSize">@dimen/text_size_sub_heading</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="list_group_theme" parent="myAppTheme">
        <item name="android:textSize">@dimen/text_size_regular</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="DatePickerSpinner">
        <item name="android:textSize">@dimen/date_picker_font_size</item>
        <item name="android:textColorPrimary">@color/theme_black_color</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/hint_color</item>
    </style>

    <style name="spinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="colorAccent">@color/theme_black_color</item>
        <item name="colorControlNormal">@color/hint_color</item>
    </style>

</resources>
