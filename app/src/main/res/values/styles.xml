<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_black_color</item>
        <item name="colorPrimaryDark">@color/theme_black_color</item>
        <item name="colorAccent">@color/theme_accent_color</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>

    </style>

    <style name="toolbar" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/toolBarColor</item>
        <item name="colorPrimaryDark">@color/toolBarColor</item>
        <item name="colorAccent">@color/toolBarColor</item>
        <item name="android:longClickable">false</item>
        <item name="android:selectable">false</item>
    </style>

    <style name="myAppTheme" parent="AppTheme">
        <item name="colorPrimary">@color/theme_black_color</item>
        <item name="colorPrimaryDark">@color/theme_black_color</item>
        <item name="colorAccent">@color/theme_accent_color</item>
    </style>

    <style name="tilTheme" parent="myAppTheme">
        <item name="android:textColorHint">@color/theme_accent_color</item>
    </style>

    <style name="DatePickerSpinner">
        <item name="android:textSize">22dp</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">#AAAAAA</item>
    </style>

    <style name="spinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:fontFamily">@font/dax_regular</item>
        <item name="colorAccent">@color/theme_accent_color</item>
        <item name="colorControlNormal">@color/theme_accent_color</item>
    </style>

</resources>
