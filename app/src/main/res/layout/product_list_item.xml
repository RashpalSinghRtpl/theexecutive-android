<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <variable
            name="productItem"
            type="com.ranosys.theexecutive.modules.productListing.ProductListingDataClass.DummyResponse"/>
    </data>


    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="New"
            android:text="@{productItem.type}"
            app:layout_constraintTop_toTopOf="@id/image"
            app:layout_constraintLeft_toLeftOf="@id/image"/>

        <TextView
            android:id="@+id/tv_discount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="20 %"
            android:text='@{productItem.discountPer +  " %"}'
            android:textColor="@color/white"
            android:background="@color/black"
            app:layout_constraintTop_toTopOf="@id/image"
            app:layout_constraintRight_toRightOf="@id/image"/>
        
        <ImageView
            android:id="@+id/image"
            android:layout_width="150dp"
            android:layout_height="200dp"
            bind:imageUrl="@{productItem.imageUrl}"
            android:scaleType="fitXY"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:text="@{productItem.name}"
            android:fontFamily="@font/dax_regular"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image"/>

        <TextView
            android:id="@+id/tv_sp_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="IDR 500"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:text='@{"IDR " + productItem.specialPrice}'
            android:fontFamily="@font/dax_regular"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_name"/>

        <TextView
            android:id="@+id/tv_normal_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="IDR 800"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:text='@{"IDR " + productItem.normalPrice}'
            android:fontFamily="@font/dax_regular"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_sp_price"/>

    </android.support.constraint.ConstraintLayout>
</layout>