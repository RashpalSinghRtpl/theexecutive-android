<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <data>
        <variable
            name="categoryViewModel"
            type="com.ranosys.theexecutive.modules.category.CategoryModelView" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/white"
        android:paddingRight="@dimen/fifteen_dp"
        android:paddingLeft="@dimen/fifteen_dp"
        >

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_search"
            android:layout_width="match_parent"
            android:theme="@style/tilTheme"
            android:labelFor="@+id/et_search"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_search_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/myAppTheme"
                android:singleLine="true"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:drawableEnd="@drawable/search"
                android:backgroundTint="@color/theme_accent_color"/>
        </android.support.design.widget.TextInputLayout>

        <ExpandableListView
            android:id="@+id/elv_parent_category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:scrollbars="none"
            android:childDivider="@null"
            android:groupIndicator="@null"
            android:layout_below="@+id/til_search"
            android:layout_marginTop="@dimen/four_dp"
            categoryItems="@{categoryViewModel.categoryResponse}"
            >

        </ExpandableListView>

    </RelativeLayout>

</layout>
