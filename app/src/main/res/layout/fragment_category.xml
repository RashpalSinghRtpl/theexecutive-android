<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <data>
        <variable
            name="categoryViewModel"
            type="com.ranosys.theexecutive.modules.category.CategoryModelView" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:background="@color/white"
        android:paddingRight="@dimen/fifteen_dp"
        android:paddingLeft="@dimen/fifteen_dp"
        >

        <TextView
            android:id="@+id/btn_search_action"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="search"
            android:textAllCaps="true"
            android:layout_alignBottom="@id/til_search"
            android:layout_alignParentEnd="true"
            android:gravity="center"
           />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_search"
            android:layout_width="match_parent"
            android:theme="@style/tilTheme"
            android:labelFor="@+id/et_search"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/btn_search_action"
          >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_search_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/myAppTheme"
                android:singleLine="true"
                android:focusable="false"
                android:hint="@string/search"
                android:imeOptions="actionSearch"
                android:backgroundTint="@color/theme_accent_color"/>
        </android.support.design.widget.TextInputLayout>



        <ExpandableListView
            android:id="@+id/elv_parent_category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:scrollbars="none"
            android:transcriptMode="disabled"
            android:childDivider="@null"
            android:animateLayoutChanges="true"
            android:groupIndicator="@null"
            android:layout_below="@+id/til_search"
            android:layout_marginTop="@dimen/four_dp"
            android:layout_marginBottom="@dimen/twelve_dp"
            categoryItems="@{categoryViewModel.categoryResponse}"
            >

        </ExpandableListView>

    </RelativeLayout>

</layout>
