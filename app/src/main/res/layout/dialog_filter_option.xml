<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingBottom="@dimen/sixteen_dp"
        android:paddingTop="@dimen/sixteen_dp">

        <android.support.constraint.Guideline
            android:id="@+id/guideline_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/twenty_four_dp" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/twenty_four_dp" />

        <TextView
            android:id="@+id/title_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/four_dp"
            android:text="@string/filter_dialog_title"
            android:theme="@style/heading_theme"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/cancel_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/cancel"
            android:src="@drawable/cancel"
            android:padding="@dimen/six_dp"
            app:layout_constraintLeft_toLeftOf="@id/guideline_left"
            app:layout_constraintBottom_toBottomOf="@+id/title_filter" />


        <TextView
            android:id="@+id/tv_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear"
            app:layout_constraintRight_toRightOf="@id/guideline_right"
            app:layout_constraintBottom_toBottomOf="@+id/title_filter" />

        <TextView
            android:id="@+id/tv_price_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price_range_label"
            android:theme="@style/sub_heading_theme"
            android:layout_marginTop="@dimen/thirty_six_dp"
            app:layout_constraintStart_toStartOf="@id/guideline_left"
            app:layout_constraintTop_toBottomOf="@id/title_filter"/>

        <LinearLayout
            android:id="@+id/range_bar_container"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/eight_dp"
            app:layout_constraintLeft_toLeftOf="@id/guideline_left"
            app:layout_constraintRight_toRightOf="@id/guideline_right"
            app:layout_constraintTop_toBottomOf="@id/tv_price_label">

            <com.ranosys.theexecutive.rangeBar.RangeSeekBar
                android:id="@+id/price_range_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_price_label"/>
        </LinearLayout>

        <com.ranosys.theexecutive.PrefixEditText
            android:id="@+id/et_min_price"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:tag="IDR "
            android:textStyle="bold"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            app:layout_constraintRight_toLeftOf="@+id/et_max_price"
            android:layout_marginRight="@dimen/twelve_dp"
            android:layout_marginTop="@dimen/sixteen_dp"
            app:layout_constraintTop_toBottomOf="@+id/range_bar_container"
            app:layout_constraintLeft_toLeftOf="@id/guideline_left"/>

        <com.ranosys.theexecutive.PrefixEditText
            android:id="@+id/et_max_price"
            android:tag="IDR "
            android:layout_width="@dimen/match_constraint"
            android:inputType="numberDecimal"
            android:textStyle="bold"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/six_dp"
            android:layout_marginTop="@dimen/sixteen_dp"
            app:layout_constraintBaseline_toBaselineOf="@id/et_min_price"
            app:layout_constraintLeft_toRightOf="@id/et_min_price"
            app:layout_constraintTop_toBottomOf="@+id/range_bar_container"
            app:layout_constraintRight_toRightOf="@id/guideline_right"/>


        <ExpandableListView
            android:id="@+id/filter_list"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="@dimen/match_constraint"
            android:divider="@null"
            android:childDivider="@null"
            android:choiceMode = "singleChoice"
            android:scrollbars="none"
            android:layout_marginTop="@dimen/twenty_four_dp"
            android:layout_marginBottom="@dimen/twenty_four_dp"
            android:paddingTop="@dimen/eight_dp"
            android:paddingBottom="@dimen/eight_dp"
            app:layout_constraintRight_toRightOf="@id/guideline_right"
            app:layout_constraintStart_toStartOf="@id/guideline_left"
            app:layout_constraintTop_toBottomOf="@id/et_min_price"
            app:layout_constraintBottom_toTopOf="@+id/btn_apply"/>

        <Button
            android:id="@+id/btn_apply"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:text="@string/apply_filters"
            android:theme="@style/button_theme"
            android:background="@drawable/black_button_bg"
            android:layout_marginTop="@dimen/twenty_four_dp"
            app:layout_constraintEnd_toEndOf="@+id/guideline_right"
            app:layout_constraintStart_toStartOf="@+id/guideline_left"
            app:layout_constraintBottom_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>

</layout>
