<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/sixteen_dp"
    android:paddingTop="@dimen/sixteen_dp">

    <android.support.constraint.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/twenty_four_dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/twenty_four_dp" />

    <TextView
        android:id="@+id/tv_price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price_range_label"
        android:theme="@style/sub_heading_theme"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toTopOf="parent"/>


    <com.ranosys.theexecutive.RangeSeekBar
        android:id="@+id/price_range_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rsb_lineColorSelected="@color/theme_black_color"
        app:rsb_lineColorEdge="@color/hint_color"
        app:rsb_textPadding="@dimen/sixteen_dp"
        app:rsb_min="1"
        app:rsb_thumbPrimaryColor="@color/theme_black_color"
        app:rsb_thumbSecondaryColor="@color/colorAccent"
        app:rsb_seekBarHeight="5dp"
        app:rsb_thumbResId="@drawable/mythumb"
        app:rsb_cellMode="number"
        app:rsb_seekBarMode="range"
        app:rsb_progressHintMode="alwaysShow"/>


    <ExpandableListView
        android:id="@+id/filter_list"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:childDivider="@null"
        android:groupIndicator="@null"
        android:choiceMode = "singleChoice"
        android:layout_marginTop="@dimen/twenty_four_dp"
        app:layout_constraintRight_toRightOf="@id/guideline_right"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toBottomOf="@id/dummy_range_bar"/>

    <Button
        android:id="@+id/btn_apply"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:text="@string/apply_filters"
        android:theme="@style/button_theme"
        android:background="@drawable/black_button_bg"
        android:layout_marginTop="@dimen/twenty_four_dp"
        app:layout_constraintEnd_toEndOf="@+id/guideline_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
