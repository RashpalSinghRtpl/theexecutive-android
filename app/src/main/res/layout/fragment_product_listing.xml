<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:paddingBottom="@dimen/sixteen_dp"
        android:background="@color/white">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:labelFor="@+id/et_search"
            android:theme="@style/tilTheme"
            android:layout_marginStart="@dimen/eight_dp"
            app:layout_constraintEnd_toStartOf="@id/btn_search"
            app:layout_constraintStart_toStartOf="parent">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/theme_accent_color"
                android:hint="@string/search"
                android:focusableInTouchMode="false"
                android:imeOptions="actionSearch"
                android:inputType="none"
                android:singleLine="true"
                android:theme="@style/myAppTheme" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/eight_dp"
            android:background="@color/white"
            android:text="@string/search"
            android:textAllCaps="true"
            app:layout_constraintTop_toTopOf="@id/til_search"
            app:layout_constraintBottom_toBottomOf="@id/til_search"
            app:layout_constraintStart_toEndOf="@id/til_search"
            app:layout_constraintEnd_toEndOf="parent" />


        <TextView
            android:id="@+id/tv_no_product_available"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/match_constraint"
            android:theme="@style/sub_heading_theme"
            android:textColor="@color/hint_color"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/til_search"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/listing_container"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="@dimen/match_constraint"
            app:layout_constraintTop_toBottomOf="@id/til_search"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

            <android.support.constraint.Guideline
                android:id="@+id/guideline_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/eight_dp" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/eight_dp" />

            <View
                android:id="@+id/view_vertical"
                android:layout_width="@dimen/half_dip"
                android:layout_height="@dimen/thirty_six_dp"
                android:layout_marginEnd="@dimen/eight_dp"
                android:layout_marginStart="@dimen/eight_dp"
                android:background="@color/divider_color"
                app:layout_constraintLeft_toLeftOf="@id/guideline_left"
                app:layout_constraintRight_toRightOf="@id/guideline_right"/>

            <TextView
                android:id="@+id/tv_sort_option"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="wrap_content"
                android:text="@string/sort_by"
                android:gravity="center"
                android:enabled="false"
                android:textAllCaps="true"
                android:letterSpacing=".1"
                android:textSize="@dimen/twelve_sp"
                app:layout_constraintLeft_toLeftOf="@id/guideline_left"
                app:layout_constraintRight_toLeftOf="@id/view_vertical"
                app:layout_constraintTop_toTopOf="@id/view_vertical"
                app:layout_constraintBottom_toBottomOf="@id/view_vertical"/>

            <TextView
                android:id="@+id/tv_filter_option"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="wrap_content"
                android:text="@string/filter_by"
                android:gravity="center"
                android:textAllCaps="true"
                android:enabled="false"
                android:textSize="@dimen/twelve_sp"
                android:letterSpacing=".1"
                app:layout_constraintRight_toRightOf="@id/guideline_right"
                app:layout_constraintLeft_toRightOf="@id/view_vertical"
                app:layout_constraintTop_toTopOf="@id/view_vertical"
                app:layout_constraintBottom_toBottomOf="@id/view_vertical"/>

            <View
                android:id="@+id/view_horizontal"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="@dimen/half_dip"
                android:background="@color/divider_color"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/view_vertical"/>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/product_list"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="@dimen/match_constraint"
            android:layout_marginTop="@dimen/sixteen_dp"
            android:contentDescription="@string/product_list"
            app:layout_constraintLeft_toLeftOf="@id/guideline_left"
            app:layout_constraintRight_toRightOf="@id/guideline_right"
            app:layout_constraintTop_toBottomOf="@id/view_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tv_chat_catalog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/theme_black_color"
                android:text="@string/chat"
                android:textSize="@dimen/fourteen_sp"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:visibility="gone"
                android:drawableLeft="@drawable/chat"
                android:paddingLeft="@dimen/ten_dp"
                android:paddingRight="@dimen/ten_dp"
                android:paddingTop="@dimen/eight_dp"
                android:paddingBottom="@dimen/eight_dp"
                android:drawablePadding="@dimen/ten_dp"
                android:layout_marginBottom="@dimen/eight_dp"
                app:layout_goneMarginBottom="@dimen/match_constraint"
                app:layout_constraintEnd_toEndOf="@id/guideline_right"
                app:layout_constraintBottom_toTopOf="@+id/tv_promo_msg"
                />

            <TextView
                android:id="@+id/tv_promo_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/eight_dp"
                android:background="@drawable/promotion_toast_bg"
                android:gravity="center"
                android:padding="@dimen/eight_dp"
                android:textSize="@dimen/fourteen_sp"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="@id/guideline_left"
                android:visibility="gone"
                app:layout_constraintRight_toRightOf="@id/guideline_right"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

</layout>
