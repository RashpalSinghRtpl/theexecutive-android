<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/sixteen_dp"
        android:paddingBottom="@dimen/sixteen_dp"
        android:background="@color/white">

        <android.support.constraint.Guideline
            android:id="@+id/guideline_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/eight_dp" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/eight_dp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_search"
            android:layout_width="@dimen/match_constraint"
            android:theme="@style/tilTheme"
            android:labelFor="@+id/et_search"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/guideline_left"
            app:layout_constraintRight_toRightOf="@id/guideline_right">

            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/myAppTheme"
                android:paddingLeft="@dimen/ten_dp"
                android:paddingRight="@dimen/ten_dp"
                android:singleLine="true"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:layout_marginLeft="@dimen/eight_dp"
                android:layout_marginRight="@dimen/eight_dp"
                android:drawableEnd="@drawable/search"
                android:backgroundTint="@color/theme_accent_color"/>
        </android.support.design.widget.TextInputLayout>

        <View
            android:id="@+id/view_vertical"
            android:layout_width="@dimen/half_dip"
            android:layout_height="@dimen/thirty_six_dp"
            android:layout_marginEnd="@dimen/eight_dp"
            android:layout_marginStart="@dimen/eight_dp"
            android:background="@color/divider_color"
            app:layout_constraintLeft_toLeftOf="@id/guideline_left"
            app:layout_constraintRight_toRightOf="@id/guideline_right"
            app:layout_constraintTop_toBottomOf="@id/til_search"/>

        <TextView
            android:id="@+id/tv_sort_option"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:text="@string/sort_by"
            android:gravity="center"
            android:textSize="@dimen/eighteen_sp"
            android:enabled="false"
            android:textAllCaps="true"
            android:letterSpacing=".1"
            app:layout_constraintLeft_toLeftOf="@id/guideline_left"
            app:layout_constraintRight_toLeftOf="@id/view_vertical"
            app:layout_constraintTop_toTopOf="@id/view_vertical"
            app:layout_constraintBottom_toBottomOf="@id/view_vertical"/>

        <TextView
            android:id="@+id/tv_filter_option"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:text="@string/filter_by"
            android:gravity="center"
            android:textSize="@dimen/eighteen_sp"
            android:textAllCaps="true"
            android:enabled="false"
            android:letterSpacing=".1"
            app:layout_constraintRight_toRightOf="@id/guideline_right"
            app:layout_constraintLeft_toRightOf="@id/view_vertical"
            app:layout_constraintTop_toTopOf="@id/view_vertical"
            app:layout_constraintBottom_toBottomOf="@id/view_vertical"/>

        <View
            android:id="@+id/view_horizontal"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="@dimen/half_dip"
            android:background="@color/divider_color"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/view_vertical"/>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/product_list"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="@dimen/match_constraint"
            android:layout_marginTop="@dimen/sixteen_dp"
            android:contentDescription="@string/product_list"
            app:layout_constraintLeft_toLeftOf="@id/guideline_left"
            app:layout_constraintRight_toRightOf="@id/guideline_right"
            app:layout_constraintTop_toBottomOf="@id/view_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</layout>
