<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/pay_amount_detail_bottom_sheet"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:layout_margin="@dimen/ten_dp">

    <ImageView
        android:id="@+id/img_arrow"
        android:layout_width="@dimen/fourteen_dp"
        android:layout_height="@dimen/fourteen_dp"
        android:src="@drawable/dropdown"
        android:layout_marginTop="@dimen/twelve_dp"
        android:layout_marginEnd="@dimen/twenty_four_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:id="@+id/label_sub_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twelve_dp"
        android:text="Sub Total"
        android:textSize="@dimen/fourteen_sp"
        android:layout_marginTop="@dimen/twelve_dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_arrow" />

    <TextView
        android:id="@+id/tv_sub_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/twelve_dp"
        android:layout_marginTop="@dimen/twelve_dp"
        android:text="IDR 1500"
        android:textSize="@dimen/fourteen_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_arrow" />

    <TextView
        android:id="@+id/label_price_discounts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twelve_dp"
        android:text="Price Discounts (-)"
        android:layout_marginTop="@dimen/ten_dp"
        android:textSize="@dimen/fourteen_sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_sub_total" />

    <TextView
        android:id="@+id/tv_price_discounts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/twelve_dp"
        android:text="IDR 200"
        android:layout_marginTop="@dimen/ten_dp"
        android:textSize="@dimen/fourteen_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sub_total" />

    <TextView
        android:id="@+id/label_voucher_discounts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_marginStart="@dimen/twelve_dp"
        android:text="Voucher or Promo Discounts (-)"
        android:textSize="@dimen/fourteen_sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_price_discounts" />

    <TextView
        android:id="@+id/tv_voucher_discounts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_marginEnd="@dimen/twelve_dp"
        android:text="IDR 300"
        android:textSize="@dimen/fourteen_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_price_discounts" />


    <TextView
        android:id="@+id/label_shipping_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_marginStart="@dimen/twelve_dp"
        android:text="Shipping Cost"
        android:textSize="@dimen/fourteen_sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_voucher_discounts" />

    <TextView
        android:id="@+id/tv_shipping_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_marginEnd="@dimen/twelve_dp"
        android:text="IDR 100"
        android:textSize="@dimen/fourteen_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_voucher_discounts" />


    <TextView
        android:id="@+id/label_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twelve_dp"
        android:text="Total Price"
        android:layout_marginTop="@dimen/ten_dp"
        android:textSize="@dimen/fourteen_sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_shipping_cost" />

    <TextView
        android:id="@+id/tv_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/twelve_dp"
        android:text="IDR 1000"
        android:layout_marginTop="@dimen/ten_dp"
        android:textSize="@dimen/fourteen_sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_shipping_cost" />


    <Button
        android:id="@+id/btn_bottom_sheet"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twenty_dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_total_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/confirm_order"
        android:background="@drawable/black_button_bg"
        android:theme="@style/button_theme"
        android:layout_marginStart="@dimen/twenty_four_dp"
        android:layout_marginEnd="@dimen/twenty_four_dp"
        android:layout_marginBottom="@dimen/twenty_four_dp"
        />

</android.support.constraint.ConstraintLayout>