<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translucent_bg"
    android:clickable="true"
    android:focusable="true"
    android:paddingStart="@dimen/eight_dp"
    android:paddingEnd="@dimen/eight_dp">


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        android:padding="@dimen/eight_dp"
        app:layout_constraintBottom_toBottomOf="@id/til_search"/>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:labelFor="@+id/et_search"
        android:theme="@style/tilTheme"
        app:layout_constraintEnd_toStartOf="@id/btn_search_action"
        app:layout_constraintStart_toStartOf="parent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_search_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/theme_accent_color"
            android:hint="@string/search"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:clickable="true"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:paddingEnd="@dimen/eight_dp"
            android:singleLine="true"
            android:theme="@style/myAppTheme" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/btn_search_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="@string/cancel"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="@id/til_search"
        app:layout_constraintStart_toEndOf="@id/til_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/til_search" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/translucent_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til_search"/>


</android.support.constraint.ConstraintLayout>