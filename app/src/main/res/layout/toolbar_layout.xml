<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.support.v4.content.ContextCompat" />
        <import type="android.view.View"/>
        <variable
            name="toolbarViewModel"
            type="com.ranosys.theexecutive.activities.ToolbarViewModel"/>
    </data>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/theme_black_color"
            android:text="@{toolbarViewModel.title}"
            android:layout_gravity="center"
            android:fontFamily="@font/dax_regular" />

        <ImageView
            android:id="@+id/toolbar_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{toolbarViewModel.isIconVisible() ? View.VISIBLE : View.GONE,  default = visible}"
            android:src="@{ContextCompat.getDrawable(context, toolbarViewModel.icon)}"
            />

    </android.support.v7.widget.Toolbar>

</layout>