<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <variable name="item"
            type="com.ranosys.theexecutive.modules.wishlist.Item"/>

    </data>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fifteen_dp"
        >

        <ImageView
            android:id="@+id/img_product"
            android:layout_width="125dp"
            android:layout_height="@dimen/one_eighty_dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            bind:baseUrlWithProductImageUrl="@{item.image}"
            android:contentDescription="@string/product_image"
            />

        <ImageView
            android:id="@+id/img_product_overlay"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="@dimen/match_constraint"
            android:background="@color/blur_image_color"
            app:layout_constraintTop_toTopOf="@id/img_product"
            app:layout_constraintBottom_toBottomOf="@id/img_product"
            app:layout_constraintStart_toStartOf="@id/img_product"
            app:layout_constraintEnd_toEndOf="@id/img_product"
            android:visibility="gone"
            android:contentDescription="@string/product_image"
            />

        <TextView
            android:id="@+id/tv_out_of_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/out_of_stock"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/fourteen_sp"
            android:visibility="visible"
            android:layout_marginTop="@dimen/four_dp"
            app:layout_constraintTop_toBottomOf="@id/img_product"
            app:layout_constraintEnd_toEndOf="@id/img_product"
            app:layout_constraintStart_toStartOf="@id/img_product"
            />

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:text="@{item.name}"
            android:textSize="@dimen/sixteen_sp"
            android:layout_marginStart="@dimen/twenty_dp"
            app:layout_constraintLeft_toRightOf="@id/img_product"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintTop_toTopOf="parent"
            android:textAllCaps="true"
            android:ellipsize="end"
            android:maxLines="2"
            />

        <TextView
            android:id="@+id/tv_product_sku"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:text="@{item.sku}"
            android:textColor="@color/hint_color"
            android:textSize="@dimen/twelve_sp"
            android:layout_marginTop="@dimen/five_dp"
            android:layout_marginStart="@dimen/twenty_dp"
            app:layout_constraintTop_toBottomOf="@id/tv_product_name"
            app:layout_constraintStart_toEndOf="@id/img_product"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            android:ellipsize="end"
            android:maxLines="1"
            />

        <LinearLayout
            android:id="@+id/layout_color_size"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_marginStart="@dimen/twenty_dp"
            android:layout_marginTop="@dimen/twenty_dp"
            app:layout_constraintTop_toBottomOf="@id/tv_product_sku"
            app:layout_constraintStart_toEndOf="@id/img_product"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0">

            <TextView
                android:id="@+id/tv_product_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textSize="@dimen/fourteen_sp"/>

            <View
                android:id="@+id/view"
                android:layout_width="@dimen/one_dip"
                android:layout_height="@dimen/twenty_dp"
                android:layout_marginStart="@dimen/six_dp"
                android:background="@color/divider_color"
                />

            <TextView
                android:id="@+id/tv_product_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:layout_marginStart="@dimen/six_dp"
                android:textSize="@dimen/fourteen_sp"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_regular_price"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:textSize="@dimen/twelve_sp"
            android:layout_marginStart="@dimen/twenty_dp"
            android:layout_marginTop="@dimen/sixteen_dp"
            app:layout_constraintStart_toEndOf="@id/img_product"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintTop_toBottomOf="@+id/layout_color_size"
            />

        <ImageView
            android:id="@+id/img_bag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/twenty_dp"
            android:layout_marginTop="@dimen/sixteen_dp"
            android:contentDescription="@string/bag_icon"
            android:padding="@dimen/five_dp"
            android:src="@drawable/bag"
            app:layout_constraintBottom_toBottomOf="@+id/img_product"
            app:layout_constraintStart_toEndOf="@id/img_product"
            app:layout_constraintTop_toBottomOf="@id/tv_regular_price"
            app:layout_constraintVertical_bias="0.0"
            app:layout_goneMarginTop="@dimen/eight_dp" />

        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sixteen_dp"
            android:contentDescription="@string/delete_icon"
            android:padding="@dimen/eight_dp"
            android:src="@drawable/delete"
            app:layout_constraintBottom_toBottomOf="@+id/img_bag"
            app:layout_constraintStart_toEndOf="@id/img_bag" />

        <View
            android:layout_width="@dimen/match_constraint"
            android:layout_height="@dimen/one_dp"
            android:background="@color/divider_color"
            android:layout_marginTop="@dimen/fifteen_dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_out_of_stock"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </android.support.constraint.ConstraintLayout>

</layout>