<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.ranosys.theexecutive.utils.Utils"/>
        <variable
            name="isDefault"
            type="Boolean"/>

        <variable
            name="country"
            type="String"/>
        <variable
            name="address"
            type="com.ranosys.theexecutive.modules.myAccount.MyAccountDataClass.Address"/>
    </data>

    <android.support.v7.widget.CardView

        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="@dimen/four_dp"
        card_view:cardBackgroundColor="@color/address_item_bg_color"
        android:layout_margin="@dimen/twelve_dp"
        card_view:cardCornerRadius="@dimen/card_corner_radius">

        <android.support.constraint.ConstraintLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingTop="@dimen/sixteen_dp">

            <CheckBox
                android:id="@+id/chk_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set_as_default"
                android:layout_marginEnd="@dimen/twenty_four_dp"
                android:enabled="@{!isDefault}"
                android:checked="@{isDefault}"
                android:textSize="@dimen/fourteen_sp"
                android:textColor="@color/hint_color"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{address.firstname + " " +address.lastname}'
                android:maxLines="2"
                android:layout_marginStart="@dimen/twenty_four_dp"
                android:textSize="@dimen/twenty_sp"
                android:layout_marginTop="@dimen/twelve_dp"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/chk_default"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text='@{address.street[0] + " " +address.street[1] + " " + address.postcode +", " + country}'
                android:layout_marginStart="@dimen/twenty_four_dp"
                android:layout_marginEnd="@dimen/twenty_four_dp"
                android:layout_marginTop="@dimen/eight_dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_name"/>

            <TextView
                android:id="@+id/tv_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mobile_number_label"
                android:labelFor="@+id/tv_mobile_number"
                android:layout_marginTop="@dimen/four_dp"
                android:layout_marginStart="@dimen/twenty_four_dp"
                app:layout_constraintTop_toBottomOf="@id/tv_address"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_mobile_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{" " + address.telephone}'
                android:layout_marginTop="@dimen/four_dp"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_mobile"
                app:layout_constraintTop_toBottomOf="@id/tv_address"
                app:layout_constraintStart_toEndOf="@id/tv_mobile"/>

            <View
                android:id="@+id/view_upper"
                android:layout_width="match_parent"
                android:layout_height="@dimen/half_dip"
                android:background="@color/divider_color"
                android:layout_marginTop="@dimen/twenty_dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_mobile_number"/>

            <TextView
                android:id="@+id/tv_remove_address"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="@dimen/match_constraint"
                android:text="@string/remove"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/view_vertical"
                app:layout_constraintTop_toBottomOf="@id/view_upper"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <View
                android:id="@+id/view_vertical"
                android:layout_width="@dimen/half_dip"
                android:layout_height="@dimen/fifty_dp"
                android:background="@color/divider_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_upper"/>

            <TextView
                android:id="@+id/tv_edit_address"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="@dimen/match_constraint"
                android:text="@string/edit"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/view_upper"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/view_vertical"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</layout>