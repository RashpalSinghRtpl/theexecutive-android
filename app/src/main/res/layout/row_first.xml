<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="childData"
            type="com.ranosys.theexecutive.modules.home.ChildrenData" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_parent_category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/eighteen_sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:padding="@dimen/ten_dp"
            android:text="@{childData.name}"
            android:fontFamily="@font/dax_regular"
            />

        <ImageView
            android:id="@+id/img_parent_category_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/parent_category_image_height"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/one"
            android:contentDescription="@string/category_image"
            />
    </LinearLayout>
</layout>