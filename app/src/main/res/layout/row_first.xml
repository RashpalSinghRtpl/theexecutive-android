<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="childData"
            type="com.ranosys.theexecutive.modules.category.ChildrenData" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_parent_category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:theme="@style/sub_heading_theme"
            android:padding="@dimen/ten_dp"
            android:text="@{childData.name}"
            />

        <ImageView
            android:id="@+id/img_parent_category_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/parent_category_image_height"
            android:adjustViewBounds="true"
            android:background="@color/hint_color"
            bind:baseWithimageUrl="@{childData.image}"
            android:contentDescription="@string/category_image"
            />
    </LinearLayout>
</layout>