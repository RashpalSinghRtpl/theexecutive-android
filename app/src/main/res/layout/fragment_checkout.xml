<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="@dimen/match_constraint"
        android:layout_height="@dimen/match_constraint"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.constraint.Guideline
                android:id="@+id/guideline_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/twenty_four_dp" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/twenty_four_dp" />


            <TextView
                android:id="@+id/txt_shiiping_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shipping Address"
                android:textSize="@dimen/twenty_sp"
                app:layout_constraintStart_toStartOf="@id/guideline_left"
                app:layout_constraintTop_toBottomOf="parent" />

            <View
                android:id="@+id/view_above"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/twenty_dp"
                android:background="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_shiiping_address"
                />
            <RelativeLayout
                android:id="@+id/relative_box"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/guideline_left"
                app:layout_constraintTop_toBottomOf="@+id/view_above">

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:layout_marginTop="@dimen/ten_sp"
                    android:textSize="@dimen/sixteen_dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_name"
                    android:maxLines="2"
                    android:text="Supropto 73, Jalan Cilaki Bandung 40115 Indonesia" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_address"
                    android:layout_marginBottom="@dimen/ten_dp"
                    android:text="+62 2345678912" />

                <TextView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/forward" />

            </RelativeLayout>
            <View
                android:id="@+id/view_below"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="1dp"
                android:background="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/relative_box"/>

           <TextView
               android:id="@+id/txt_items"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Items"
               android:textSize="@dimen/twenty_sp"
               android:layout_marginTop="@dimen/ten_dp"
               app:layout_constraintTop_toBottomOf="@id/view_below"
               app:layout_constraintStart_toStartOf="@id/guideline_left" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/twenty_dp"
                tools:listitem="@layout/item_count"
                app:layout_constraintTop_toBottomOf="@id/txt_items"
                app:layout_constraintStart_toStartOf="@id/guideline_left"
                app:layout_constraintEnd_toEndOf="@id/guideline_right">

            </android.support.v7.widget.RecyclerView>



          <TextView
              android:id="@+id/txt_shipping_method"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Shipping Method"
              android:textSize="@dimen/twenty_sp"
              android:layout_marginTop="@dimen/twenty_dp"
              app:layout_constraintTop_toBottomOf="@id/recycler_view"
              app:layout_constraintStart_toStartOf="@id/guideline_left"/>

            <TextView
                android:id="@+id/txt_arrow"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginTop="@dimen/thirty_dp"
                android:background="@drawable/forward"
                app:layout_constraintEnd_toEndOf="@id/guideline_right"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@id/txt_shipping_method"
                app:layout_constraintTop_toBottomOf="@id/recycler_view" />

            <View
                android:id="@+id/view_below_shipping"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginTop="@dimen/twenty_dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_shipping_method"/>
            <TextView
                android:id="@+id/txt_payment_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Method"
                android:textSize="@dimen/twenty_sp"
                android:layout_marginTop="@dimen/twenty_dp"
                app:layout_constraintStart_toStartOf="@id/guideline_left"
                app:layout_constraintTop_toBottomOf="@id/view_below_shipping"/>

            <TextView
                android:id="@+id/txt_arrow2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginTop="@dimen/thirty_dp"
                android:background="@drawable/forward"
                app:layout_constraintEnd_toEndOf="@id/guideline_right"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@id/txt_payment_method"
                app:layout_constraintTop_toBottomOf="@id/view_below_shipping" />

            <View
                android:id="@+id/view_below_payment"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginTop="@dimen/twenty_dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_payment_method"/>


            <TextView
                android:id="@+id/txt_arrowdown"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="@dimen/twenty_dp"
                android:background="@drawable/downarrow"
                app:layout_constraintEnd_toEndOf="@id/guideline_right"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintTop_toBottomOf="@id/view_below_payment" />


            <TextView
                android:id="@+id/txt_total_amount"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Total IDR 299.880"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/forty_dp"
                app:layout_constraintStart_toStartOf="@id/guideline_left"
                app:layout_constraintEnd_toEndOf="@id/guideline_right"
                app:layout_constraintTop_toBottomOf="@id/view_below_payment"/>

        <Button
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/guideline_left"
            app:layout_constraintEnd_toEndOf="@id/guideline_right"
            android:background="@color/theme_black_color"
            android:layout_marginTop="@dimen/thirty_dp"
            android:text="Confirm order &amp; pay now"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/txt_total_amount"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>