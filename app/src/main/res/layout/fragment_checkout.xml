<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View" />
        <import type="android.text.TextUtils"/>

        <variable
            name="paymentMethodCount"
            type="Integer"/>

        <variable
            name="shippingMethodCount"
            type="Integer"/>

        <variable
            name="cartItemSize"
            type="Integer"/>

        <variable
            name="country"
            type="String"/>

        <variable
            name="address"
            type="com.ranosys.theexecutive.modules.myAccount.MyAccountDataClass.Address"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="none">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/cl_inside_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.constraint.Guideline
                    android:id="@+id/guideline_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="@dimen/twenty_four_dp" />

                <android.support.constraint.Guideline
                    android:id="@+id/guideline_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="@dimen/twenty_four_dp" />


                <TextView
                    android:id="@+id/tv_shipping"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/eight_dp"
                    android:text="@string/shipping_address"
                    android:textSize="@dimen/eighteen_sp"
                    android:visibility="@{address != null ? View.VISIBLE : View.INVISIBLE}"
                    app:layout_constraintRight_toRightOf="@id/guideline_right"
                    app:layout_constraintLeft_toLeftOf="@id/guideline_left"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/divider_address_above"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="@dimen/half_dip"
                    android:layout_marginTop="@dimen/sixteen_dp"
                    android:background="@color/divider_color"
                    android:visibility="@{tvShipping.visibility}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_shipping"/>

                <View
                    android:id="@+id/divider_address_below"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="@dimen/half_dip"
                    android:layout_marginTop="@dimen/eight_dp"
                    android:background="@color/divider_color"
                    android:visibility="@{tvShipping.visibility}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_mobile"/>

                <View
                    android:id="@+id/address_expand_view"
                    android:layout_width="@dimen/forty_eight_dp"
                    android:layout_height="@dimen/match_constraint"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider_address_above"
                    app:layout_constraintBottom_toTopOf="@id/divider_address_below"
                    />

                <ImageView
                    android:id="@+id/address_expand_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/forward"
                    android:padding="@dimen/eight_dp"
                    android:visibility="@{tvShipping.visibility}"
                    android:contentDescription="@string/address"
                    app:layout_constraintTop_toTopOf="@id/address_expand_view"
                    app:layout_constraintBottom_toBottomOf="@id/address_expand_view"
                    app:layout_constraintEnd_toEndOf="@id/address_expand_view"
                    app:layout_constraintStart_toStartOf="@id/address_expand_view"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/eight_dp"
                    android:text='@{address.firstname + " " +address.lastname}'
                    android:textSize="@dimen/eighteen_sp"
                    android:textStyle="bold"
                    android:visibility="@{TextUtils.isEmpty(address.firstname)? View.INVISIBLE : View.VISIBLE}"
                    app:layout_constraintStart_toStartOf="@id/guideline_left"
                    app:layout_constraintEnd_toStartOf="@id/address_expand_view"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintTop_toBottomOf="@id/divider_address_above"/>

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/eight_dp"
                    android:ellipsize="end"
                    android:maxLines="5"
                    android:visibility="@{TextUtils.isEmpty(address.firstname)? View.INVISIBLE : View.VISIBLE}"
                    android:text='@{address.street[0] + ", " +(address.street[1] == null ? "" : address.street[1]) + " " + address.postcode +"\n" + address.city + ", " + address.region.region + "," + country}'
                    app:layout_constraintStart_toStartOf="@id/guideline_left"
                    app:layout_constraintEnd_toStartOf="@id/address_expand_view"
                    app:layout_constraintTop_toBottomOf="@+id/tv_name" />

                <TextView
                    android:id="@+id/tv_mobile"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/eight_dp"
                    android:visibility="@{TextUtils.isEmpty(address.telephone)? View.INVISIBLE : View.VISIBLE}"
                    android:text='@{"" + address.telephone}'
                    app:layout_constraintStart_toStartOf="@id/guideline_left"
                    app:layout_constraintEnd_toStartOf="@id/address_expand_view"
                    app:layout_constraintTop_toBottomOf="@id/tv_address"
                    />


                <TextView
                    android:id="@+id/tv_items"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/twelve_dp"
                    android:text="@string/items"
                    android:visibility="@{cartItemSize != 0 ? View.VISIBLE: View.INVISIBLE}"
                    android:textSize="@dimen/eighteen_sp"
                    app:layout_constraintStart_toStartOf="@id/guideline_left"
                    app:layout_constraintEnd_toEndOf="@id/guideline_right"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintTop_toBottomOf="@+id/divider_address_below" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/cart_item_list"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/twelve_dp"
                    android:layout_marginBottom="@dimen/sixteen_dp"
                    android:visibility="@{tvItems.visibility}"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="@id/guideline_right"
                    app:layout_constraintStart_toStartOf="@id/guideline_left"
                    app:layout_constraintTop_toBottomOf="@id/tv_items" />

                <TextView
                    android:id="@+id/tv_shipping_method"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    android:text="@string/shipping_method"
                    android:textSize="@dimen/eighteen_sp"
                    android:paddingTop="@dimen/four_dp"
                    android:paddingBottom="@dimen/four_dp"
                    android:visibility="@{shippingMethodCount != 0 ? View.VISIBLE: View.INVISIBLE}"
                    android:layout_marginTop="@dimen/twenty_dp"
                    app:layout_constraintStart_toStartOf="@id/guideline_left"
                    app:layout_constraintEnd_toEndOf="@id/guideline_right"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintTop_toBottomOf="@id/cart_item_list"/>

                <ImageView
                    android:id="@+id/shipping_method_expand_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/forward"
                    android:contentDescription="@string/shipping_method"
                    android:visibility="@{tvShippingMethod.visibility}"
                    app:layout_constraintTop_toTopOf="@id/tv_shipping_method"
                    app:layout_constraintBottom_toBottomOf="@id/tv_shipping_method"
                    app:layout_constraintRight_toRightOf="@id/tv_shipping_method"
                    android:padding="@dimen/eight_dp"/>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_shipping_method"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/two_dp"
                    app:cardElevation="@dimen/two_dp"
                    android:visibility="gone"
                    android:layout_margin="@dimen/twelve_dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_shipping_method">

                    <RadioGroup
                        android:id="@+id/shipping_method_rg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                </android.support.v7.widget.CardView>

                <View
                    android:id="@+id/divider_shipping_method_below"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="@dimen/half_dip"
                    android:background="@color/divider_color"
                    android:layout_marginTop="@dimen/twelve_dp"
                    android:visibility="@{tvShippingMethod.visibility}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cv_shipping_method"/>

                <TextView
                    android:id="@+id/tv_payment_method"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/four_dp"
                    android:paddingBottom="@dimen/four_dp"
                    android:text="@string/payment_method"
                    android:textSize="@dimen/eighteen_sp"
                    android:visibility="@{tvShippingMethod.visibility}"
                    android:layout_marginTop="@dimen/twenty_dp"
                    app:layout_constraintStart_toStartOf="@id/guideline_left"
                    app:layout_constraintEnd_toEndOf="@id/guideline_right"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintTop_toBottomOf="@id/divider_shipping_method_below"
                    />

                <ImageView
                    android:id="@+id/payment_method_expand_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/forward"
                    android:contentDescription="@string/payment_method"
                    android:visibility="@{tvPaymentMethod.visibility}"
                    app:layout_constraintTop_toTopOf="@id/tv_payment_method"
                    app:layout_constraintBottom_toBottomOf="@id/tv_payment_method"
                    app:layout_constraintRight_toRightOf="@id/tv_payment_method"
                    android:padding="@dimen/eight_dp"/>


                <android.support.v7.widget.CardView
                    android:id="@+id/cv_payment_method"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/two_dp"
                    app:cardElevation="@dimen/two_dp"
                    android:visibility="gone"
                    android:layout_margin="@dimen/twelve_dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_payment_method">

                    <RadioGroup
                        android:id="@+id/payment_method_rg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                </android.support.v7.widget.CardView>

                <View
                    android:id="@+id/divider_payment_method_below"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="@dimen/half_dip"
                    android:background="@color/divider_color"
                    android:layout_marginTop="@dimen/twelve_dp"
                    android:visibility="@{tvPaymentMethod.visibility}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cv_payment_method"/>

                <View
                    android:id="@+id/offset_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/one_fifty_dp"
                    app:layout_constraintTop_toBottomOf="@id/divider_payment_method_below"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </android.support.constraint.ConstraintLayout>
        </android.support.v4.widget.NestedScrollView>

        <include layout="@layout/pay_amount_detail_bottom_sheet" />

    </android.support.design.widget.CoordinatorLayout>

</layout>