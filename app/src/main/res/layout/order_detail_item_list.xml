<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.ranosys.theexecutive.modules.order.orderDetail.Item" />
    </data>

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_marginBottom="@dimen/ten_dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_product"
            android:layout_width="@dimen/nineteen_dp"
            android:layout_height="@dimen/one_twenty_five_dp"
            android:contentDescription="@string/product_image"
            app:layout_constraintStart_toStartOf="parent"
            bind:baseUrlWithProductImageUrl="@{item.extension_attributes.image}"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fifteen_dp"
            android:ellipsize="end"
            android:fontFamily="@font/dax_medium"
            android:maxLines="2"
            android:text="@{item.name}"
            android:textAllCaps="true"
            android:textSize="@dimen/sixteen_sp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_product"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_product_sku"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fifteen_dp"
            android:layout_marginTop="@dimen/five_dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text='@{"SKU " +item.sku}'
            android:textColor="@color/hint_color"
            android:textSize="@dimen/twelve_sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_product"
            app:layout_constraintTop_toBottomOf="@id/tv_product_name" />

        <LinearLayout
            android:id="@+id/layout_color_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fifteen_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@id/img_product"
            app:layout_constraintTop_toBottomOf="@id/tv_product_sku">

            <TextView
                android:id="@+id/tv_product_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/fourteen_sp" />

            <View
                android:id="@+id/view_vertical"
                android:layout_width="@dimen/one_dp"
                android:layout_height="@dimen/twenty_dp"
                android:layout_marginStart="@dimen/ten_dp"
                android:background="@color/divider_color" />

            <TextView
                android:id="@+id/tv_product_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ten_dp"
                android:textColor="@color/black"
                android:textSize="@dimen/fourteen_sp" />


            <View
                android:id="@+id/view_vertical1"
                android:layout_width="@dimen/one_dp"
                android:layout_height="@dimen/twenty_dp"
                android:layout_marginStart="@dimen/ten_dp"
                android:background="@color/divider_color" />


            <TextView
                android:id="@+id/tv_product_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ten_dp"
                android:textColor="@color/black"
                android:textSize="@dimen/fourteen_sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_regular_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="@dimen/sixteen_sp"
            android:layout_marginTop="@dimen/ten_dp"
            app:layout_constraintTop_toBottomOf="@+id/layout_color_size"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginStart="@dimen/fifteen_dp"
            app:layout_constraintStart_toEndOf="@id/img_product" />


    </android.support.constraint.ConstraintLayout>

</layout>