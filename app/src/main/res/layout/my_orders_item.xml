<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.ranosys.theexecutive.modules.order.orderList.OrderListResponse" />

    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/ten_dp"
        card_view:cardBackgroundColor="@color/address_item_bg_color"
        card_view:cardCornerRadius="@dimen/card_corner_radius"
        card_view:cardElevation="@dimen/four_dp">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingStart="@dimen/fifteen_dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_product_item"
                android:layout_width="@dimen/seventy_dp"
                android:layout_height="@dimen/hundred_dp"
                android:layout_margin="@dimen/ten_dp"
                android:contentDescription="@string/image_one_detail"
                android:src="@drawable/placeholder"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                bind:baseUrlWithProductImageUrl="@{item.image}" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:layout_marginEnd="@dimen/ten_dp"
                android:textSize="@dimen/date_text_size"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/hint_color"
                app:layout_constraintBottom_toBottomOf="@+id/tv_order_no"
                app:layout_constraintEnd_toEndOf="parent"
                 />

            <TextView
                android:id="@+id/tv_order_no"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/eight_dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:textSize="@dimen/order_number_text_size"
                android:maxLines="2"
                android:text='@{"Order no. "+item.id}'
                android:textColor="@color/black"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/img_product_item"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_date"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/eight_dp"
                android:layout_marginTop="@dimen/five_dp"
                android:textSize="@dimen/price_text_size"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@id/img_product_item"
                app:layout_constraintTop_toBottomOf="@id/tv_order_no" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/eight_dp"
                android:layout_marginTop="@dimen/five_dp"
                android:text="@{item.status}"
                android:textSize="@dimen/status_text_size"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/img_product_item"
                app:layout_constraintTop_toBottomOf="@id/tv_price" />

            <TextView
                android:id="@+id/tv_payment_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/eight_dp"
                android:layout_marginTop="@dimen/five_dp"
                android:textSize="@dimen/status_text_size"
                android:textColor="@color/light_green"
                android:paddingBottom="@dimen/ten_dp"
                app:layout_constraintStart_toEndOf="@id/img_product_item"
                app:layout_constraintTop_toBottomOf="@id/tv_status" />

            <Button
                android:id="@+id/btn_return"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/twenty_eight_dp"
                android:layout_marginEnd="@dimen/ten_dp"
                android:background="@drawable/ghost_btn_bg"
                android:text="@string/order_return"
                android:textAllCaps="false"
                android:textSize="@dimen/return_text_size"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@id/tv_status"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</layout>