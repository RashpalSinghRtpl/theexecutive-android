<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/tools"
   >


    <data>

        <variable
            name="item"
            type="com.ranosys.theexecutive.modules.order.OrderListResponse" />

    </data>

    <android.support.v7.widget.CardView

        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/twelve_dp"
        card_view:cardBackgroundColor="@color/address_item_bg_color"
        card_view:cardCornerRadius="@dimen/card_corner_radius"
        card_view:cardElevation="@dimen/four_dp">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/img_product_item"
                android:layout_width="@dimen/hundred_dp"
                android:layout_height="@dimen/hundred_dp"
                android:layout_margin="@dimen/ten_dp"
                android:contentDescription="@string/image_one_detail"
                android:scaleType="centerCrop"
                android:src="@drawable/one"
                bind:baseUrlWithProductImageUrl="@{item.image}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/twenty_dp"
                android:hint="@string/app_name"
                android:text="@{item.date}"
                android:textSize="@dimen/twelve_sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_order_no"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.94"
                app:layout_constraintStart_toEndOf="@id/tv_order_no" />

            <TextView
                android:id="@+id/tv_order_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ten_dp"
                android:layout_marginTop="@dimen/twenty_dp"
                android:hint="@string/app_name"
                android:text="@{item.id}"
                android:textSize="@dimen/fourteen_sp"
                app:layout_constraintStart_toEndOf="@id/img_product_item"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ten_dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:hint="@string/app_name"
                android:text="@{item.amount}"
                android:textSize="@dimen/fourteen_sp"
                app:layout_constraintStart_toEndOf="@id/img_product_item"
                app:layout_constraintTop_toBottomOf="@id/tv_order_no" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ten_dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:text="@{item.status}"
                android:textSize="@dimen/fourteen_sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/img_product_item"
                app:layout_constraintTop_toBottomOf="@id/tv_price" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginEnd="@dimen/twenty_dp"
                android:background="@drawable/ghost_btn_bg"
                android:text="Return"
                android:textAllCaps="false"
                android:textSize="@dimen/fourteen_sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_status"
                app:layout_constraintEnd_toEndOf="parent"

                />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</layout>