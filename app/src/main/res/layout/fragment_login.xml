<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="loginVM"
            type="com.delamibrands.theexecutive.modules.login.LoginViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:paddingTop="@dimen/sixteen_dp"
        android:paddingBottom="@dimen/sixteen_dp">

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="@dimen/match_constraint"
            android:fillViewport="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/container_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.constraint.Guideline
                    android:id="@+id/guideline_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="@dimen/twenty_four_dp" />

                <android.support.constraint.Guideline
                    android:id="@+id/guideline_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="@dimen/twenty_four_dp" />

                <TextView
                    android:id="@+id/tv_existing_user_label"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    android:text="@string/existing_user_label"
                    android:theme="@style/sub_heading_theme"
                    android:layout_marginTop="@dimen/twelve_dp"
                    app:layout_constraintStart_toStartOf="@+id/guideline_left"
                    app:layout_constraintTop_toTopOf="parent" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_email"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    android:hint="@string/email_address"
                    android:theme="@style/tilTheme"
                    android:labelFor="@+id/et_email"
                    android:layout_marginTop="@dimen/twelve_dp"
                    app:errorText="@{loginVM.emailError}"
                    app:layout_constraintTop_toBottomOf="@id/tv_existing_user_label"
                    app:layout_constraintEnd_toEndOf="@+id/guideline_right"
                    app:layout_constraintStart_toStartOf="@+id/guideline_left">

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_email"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:text="@={loginVM.email}"
                        android:paddingStart="@dimen/field_start_padding"
                        android:onTextChanged="@{() -> loginVM.onEmailTextChanged()}"
                         />
                </android.support.design.widget.TextInputLayout>



                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_password"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:hint="@string/password"
                    android:labelFor="@+id/et_password"
                    android:theme="@style/tilTheme"
                    app:errorText="@{loginVM.passwordError}"
                    app:layout_constraintEnd_toEndOf="@+id/guideline_right"
                    app:layout_constraintStart_toStartOf="@+id/guideline_left"
                    app:layout_constraintTop_toBottomOf="@id/til_email">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:paddingStart="@dimen/field_start_padding"
                        android:text="@={loginVM.password}"
                        android:inputType="textPassword"
                        android:onTextChanged="@{() -> loginVM.onPasswordTextChanged()}"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    android:onClick="@{(view)->loginVM.btnClicked(view)}"
                    android:text="@string/login"
                    android:theme="@style/button_theme"
                    android:background="@drawable/black_button_bg"
                    android:layout_marginTop="@dimen/thirtyTwo_dp"
                    app:layout_constraintEnd_toEndOf="@+id/guideline_right"
                    app:layout_constraintStart_toStartOf="@+id/guideline_left"
                    app:layout_constraintTop_toBottomOf="@id/til_password" />

                <TextView
                    android:id="@+id/tv_forgot_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/forgot_password"
                    android:onClick="@{(view)->loginVM.btnClicked(view)}"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/sixteen_dp"
                    app:layout_constraintStart_toStartOf="@id/guideline_left"
                    app:layout_constraintEnd_toEndOf="@+id/guideline_right"
                    app:layout_constraintTop_toBottomOf="@id/btn_login" />


                <TextView
                    android:id="@+id/tv_login_with"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_with"
                    android:fontFamily="@font/opensans_semibold"
                    android:layout_marginTop="@dimen/twenty_eight_dp"
                    app:layout_constraintEnd_toEndOf="@+id/guideline_right"
                    app:layout_constraintStart_toStartOf="@+id/guideline_left"
                    app:layout_constraintTop_toBottomOf="@id/tv_forgot_password"/>

                <View
                    android:id="@+id/view_vertical"
                    android:layout_width="@dimen/one_dip"
                    android:layout_height="@dimen/thirtyTwo_dp"
                    android:layout_marginStart="@dimen/eight_dp"
                    android:layout_marginTop="@dimen/twenty_four_dp"
                    android:background="@color/divider_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_login_with" />

                <ImageView
                    android:id="@+id/btn_gmail_login"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/twenty_dp"
                    android:contentDescription="@string/gmail_login"
                    android:onClick="@{(view)->loginVM.btnClicked(view)}"
                    android:src="@drawable/gmail"
                    app:layout_constraintBottom_toBottomOf="@+id/view_vertical"
                    app:layout_constraintStart_toEndOf="@+id/view_vertical"
                    app:layout_constraintTop_toTopOf="@+id/view_vertical" />

                <ImageView
                    android:id="@+id/btn_fb_login"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/twenty_dp"
                    android:contentDescription="@string/facebook_login"
                    android:onClick="@{(view)->loginVM.btnClicked(view)}"
                    android:src="@drawable/facebook"
                    app:layout_constraintBottom_toBottomOf="@+id/view_vertical"
                    app:layout_constraintEnd_toStartOf="@+id/view_vertical"
                    app:layout_constraintTop_toTopOf="@+id/view_vertical" />

                <TextView
                    android:id="@+id/tv_new_user_label"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    android:text="@string/new_user_label"
                    android:theme="@style/sub_heading_theme"
                    android:layout_marginTop="@dimen/forty_eight_dp"
                    app:layout_constraintStart_toStartOf="@+id/guideline_left"
                    app:layout_constraintTop_toBottomOf="@id/view_vertical"/>

                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    android:onClick="@{(view)->loginVM.btnClicked(view)}"
                    android:text="@string/create_account"
                    android:theme="@style/button_theme"
                    android:background="@drawable/black_button_bg"
                    android:layout_marginTop="@dimen/twenty_four_dp"
                    app:layout_constraintEnd_toEndOf="@+id/guideline_right"
                    app:layout_constraintStart_toStartOf="@+id/guideline_left"
                    app:layout_constraintTop_toBottomOf="@id/tv_new_user_label" />

            </android.support.constraint.ConstraintLayout>

        </ScrollView>

    </android.support.constraint.ConstraintLayout>
</layout>
