<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="store"
            type="com.ranosys.theexecutive.modules.splash.StoreResponse"/>
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/twenty_dp"
        android:paddingBottom="@dimen/twenty_dp">

        <TextView
            android:id="@+id/store_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Language"
            android:text="@{store.name}"
            android:fontFamily="@font/dax_regular"
            android:layout_marginStart="@dimen/thirtyTwo_dp"
            android:textColor="@color/theme_black_color"
            android:textSize="@dimen/eighteen_sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/is_selected_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/thirtyTwo_dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/store_name_tv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/tick" />

    </android.support.constraint.ConstraintLayout>
</layout>