<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="changePasswordViewModel"
            type="com.delamibrands.theexecutive.modules.changePassword.ChangePasswordViewModel">
        </variable>
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_main_layout"
        android:paddingBottom="@dimen/sixteen_dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:background="@color/white">
        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="@dimen/match_constraint"
            android:fillViewport="true"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/cl_inside_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.constraint.Guideline
                    android:id="@+id/guideline_right"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintGuide_end="@dimen/twenty_four_dp" />

                <android.support.constraint.Guideline
                    android:id="@+id/guideline_left"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintGuide_begin="@dimen/twenty_four_dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_current_password"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    android:hint="@string/current_password"
                    android:theme="@style/tilTheme"
                    android:labelFor="@+id/et_current_password"
                    android:layout_marginTop="@dimen/sixteen_dp"
                    app:errorText="@{changePasswordViewModel.currentPasswordError}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/guideline_right"
                    app:layout_constraintStart_toStartOf="@+id/guideline_left">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_current_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:onTextChanged='@{() -> changePasswordViewModel.onTextChanged(etCurrentPassword)}'
                        android:text="@={changePasswordViewModel.currentPassword}"
                        android:paddingEnd="@dimen/field_start_padding"
                        android:paddingStart="@dimen/field_start_padding"/>
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_new_password"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:hint="@string/new_password"
                    android:theme="@style/tilTheme"
                    android:labelFor="@+id/et_new_password"
                    app:errorText="@{changePasswordViewModel.newPasswordError}"
                    app:layout_constraintTop_toBottomOf="@id/til_current_password"
                    app:layout_constraintEnd_toEndOf="@+id/guideline_right"
                    app:layout_constraintStart_toStartOf="@+id/guideline_left">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_new_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:onTextChanged='@{() -> changePasswordViewModel.onTextChanged(etNewPassword)}'
                        android:text="@={changePasswordViewModel.newPassword}"
                        android:paddingEnd="@dimen/field_start_padding"
                        android:paddingStart="@dimen/field_start_padding"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_confirm_new_password"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:hint="@string/confirm_new_password"
                    android:theme="@style/tilTheme"
                    android:labelFor="@+id/et_confirm_new_password"
                    app:errorText="@{changePasswordViewModel.confirmPasswordError}"
                    app:layout_constraintTop_toBottomOf="@id/til_new_password"
                    app:layout_constraintEnd_toEndOf="@+id/guideline_right"
                    app:layout_constraintStart_toStartOf="@+id/guideline_left">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_confirm_new_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:onTextChanged='@{() -> changePasswordViewModel.onTextChanged(etConfirmNewPassword)}'
                        android:text="@={changePasswordViewModel.confirmPassword}"
                        android:paddingEnd="@dimen/field_start_padding"
                        android:paddingStart="@dimen/field_start_padding"/>
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    android:background="@drawable/black_button_bg"
                    android:text="@string/submit"
                    android:theme="@style/button_theme"
                    android:layout_marginStart="@dimen/twenty_four_dp"
                    android:layout_marginEnd="@dimen/twenty_four_dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/til_confirm_new_password"
                    app:layout_constraintVertical_bias="0.9" />
            </android.support.constraint.ConstraintLayout>
        </ScrollView>
    </android.support.constraint.ConstraintLayout>
</layout>