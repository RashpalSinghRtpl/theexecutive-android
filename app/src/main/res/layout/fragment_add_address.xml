<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.ranosys.theexecutive.modules.myAccount.AddAddressViewModel"/>
        <variable
            name="address"
            type="com.ranosys.theexecutive.modules.myAccount.MyAccountDataClass.MaskedUserInfo"/>
    </data>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_main_layout"
        android:paddingTop="@dimen/sixteen_dp"
        android:paddingBottom="@dimen/sixteen_dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="@dimen/match_constraint"
            android:fillViewport="true"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/cl_inside_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.constraint.Guideline
                    android:id="@+id/guideline_right"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintGuide_end="@dimen/twenty_four_dp" />

                <android.support.constraint.Guideline
                    android:id="@+id/guideline_left"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintGuide_begin="@dimen/twenty_four_dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_first_name"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    android:hint="@string/first_name"
                    app:errorText="@{vm.firstNameError}"
                    android:theme="@style/tilTheme"
                    android:labelFor="@+id/et_first_name"
                    android:layout_marginTop="@dimen/sixteen_dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/guideline_right"
                    app:layout_constraintStart_toStartOf="@+id/guideline_left">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={vm.maskedAddress.firstName}"
                        android:onTextChanged='@{() -> vm.onTextChanged(etFirstName)}'
                        android:maxLength="50"
                        android:inputType="text|textCapWords" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_last_name"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:hint="@string/last_name"
                    app:errorText="@{vm.lastNameError}"
                    android:labelFor="@+id/et_last_name"
                    android:theme="@style/tilTheme"
                    app:layout_constraintTop_toBottomOf="@id/til_first_name"
                    app:layout_constraintEnd_toEndOf="@+id/guideline_right"
                    app:layout_constraintStart_toStartOf="@+id/guideline_left">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={vm.maskedAddress.lastName}"
                        android:onTextChanged='@{() -> vm.onTextChanged(etLastName)}'
                        android:inputType="text|textCapWords" />
                </android.support.design.widget.TextInputLayout>

                <Spinner
                    android:id="@+id/spinner_country_code"
                    android:layout_height="@dimen/match_constraint"
                    android:layout_width="wrap_content"
                    android:minWidth="@dimen/match_constraint"
                    android:spinnerMode="dropdown"
                    android:overlapAnchor="false"
                    android:entries="@array/country_code"
                    android:background="@drawable/spinner"
                    app:layout_constraintStart_toStartOf="@id/guideline_left"
                    app:layout_constraintTop_toTopOf="@id/til_mobile_no"
                    app:layout_constraintEnd_toStartOf="@id/til_mobile_no"
                    app:layout_constraintBottom_toBottomOf="@+id/til_mobile_no" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_mobile_no"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:hint="@string/mobile_number"
                    app:errorText="@{vm.mobileNumberError}"
                    android:labelFor="@+id/et_mobile_number"
                    android:theme="@style/tilTheme"
                    app:layout_constraintLeft_toRightOf="@id/spinner_country_code"
                    app:layout_constraintTop_toBottomOf="@id/til_last_name"
                    app:layout_constraintEnd_toEndOf="@+id/guideline_right">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_mobile_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/field_start_padding"
                        android:text="@={vm.maskedAddress.mobile}"
                        android:onTextChanged='@{() -> vm.onTextChanged(etMobileNumber)}'
                        android:inputType="number" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_address_1"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:hint="@string/street_address_1"
                    app:errorText="@{vm.streetAddress1Error}"
                    android:labelFor="@+id/et_last_name"
                    android:theme="@style/tilTheme"
                    app:layout_constraintTop_toBottomOf="@id/til_mobile_no"
                    app:layout_constraintEnd_toEndOf="@+id/guideline_right"
                    app:layout_constraintStart_toStartOf="@+id/guideline_left">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_address_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={vm.maskedAddress.streedAdd1}"
                        android:onTextChanged='@{() -> vm.onTextChanged(etAddress1)}'
                        android:inputType="text|textCapWords" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_address_2"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:hint="@string/street_address_2"
                    android:labelFor="@+id/et_last_name"
                    android:theme="@style/tilTheme"
                    app:layout_constraintTop_toBottomOf="@id/til_address_1"
                    app:layout_constraintEnd_toEndOf="@+id/guideline_right"
                    app:layout_constraintStart_toStartOf="@+id/guideline_left">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_address_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={vm.maskedAddress.streedAdd2}"
                        android:inputType="text|textCapWords" />
                </android.support.design.widget.TextInputLayout>

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spinner_country"
                    android:layout_height="wrap_content"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:entries="@{vm.countryList}"
                    android:onItemSelected="@{(parent, view, pos, id) -> vm.onCountrySelection(pos)}"
                    android:padding="@dimen/ten_dp"
                    android:theme="@style/spinnerItemStyle"
                    android:background="@drawable/spinner"
                    app:layout_constraintStart_toStartOf="@id/guideline_left"
                    app:layout_constraintEnd_toEndOf="@id/guideline_right"
                    app:layout_constraintTop_toBottomOf="@id/til_address_2" />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spinner_state"
                    android:layout_height="wrap_content"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:entries="@{vm.stateList}"
                    android:padding="@dimen/ten_dp"
                    android:onItemSelected="@{(parent, view, pos, id) -> vm.onStateSelection(pos)}"
                    android:background="@drawable/spinner"
                    app:layout_constraintStart_toStartOf="@id/guideline_left"
                    app:layout_constraintEnd_toEndOf="@id/guideline_right"
                    app:layout_constraintTop_toBottomOf="@id/spinner_country" />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spinner_city"
                    android:layout_height="wrap_content"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:padding="@dimen/ten_dp"
                    android:entries="@{vm.cityList}"
                    android:background="@drawable/spinner"
                    android:spinnerMode="dropdown"
                    app:layout_constraintStart_toStartOf="@id/guideline_left"
                    app:layout_constraintEnd_toEndOf="@id/guideline_right"
                    app:layout_constraintTop_toBottomOf="@id/spinner_state" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_zip_code"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    android:hint="@string/postcode"
                    app:errorText="@{vm.postalCodeError}"
                    android:theme="@style/tilTheme"
                    android:layout_marginTop="@dimen/sixteen_dp"
                    app:layout_constraintTop_toBottomOf="@id/spinner_city"
                    app:layout_constraintEnd_toEndOf="@+id/guideline_right"
                    app:layout_constraintStart_toStartOf="@+id/guideline_left">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_zip_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={vm.maskedAddress.postalCode}"
                        android:onTextChanged='@{() -> vm.onTextChanged(etZipCode)}'
                        android:inputType="number" />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/add_address"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twenty_four_dp"
                    android:layout_marginRight="@dimen/twenty_four_dp"
                    android:layout_marginTop="@dimen/forty_dp"
                    android:background="@drawable/black_button_bg"
                    android:text="@string/add"
                    android:theme="@style/button_theme"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/til_zip_code"
                    app:layout_constraintVertical_bias="0.85" />
            </android.support.constraint.ConstraintLayout>
        </ScrollView>
    </android.support.constraint.ConstraintLayout>
</layout>