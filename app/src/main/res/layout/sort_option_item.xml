<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="option"
            type="com.ranosys.theexecutive.modules.productListing.ProductListingDataClass.SortOptionResponse"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/twenty_dp"
        android:paddingBottom="@dimen/twenty_dp"
        android:background="?selectableItemBackground">

        <TextView
            android:id="@+id/sort_option_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{option.attribute_name}"
            android:layout_marginStart="@dimen/twenty_four_dp"
            android:textSize="@dimen/eighteen_sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/is_selected_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/select_lang_title"
            android:layout_marginEnd="@dimen/thirtyTwo_dp"
            android:visibility="gone"
            app:srcCompat="@drawable/tick"
            app:layout_constraintBottom_toBottomOf="@+id/sort_option_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </android.support.constraint.ConstraintLayout>
</layout>