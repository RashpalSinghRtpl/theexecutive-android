<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="item"
            type="com.delamibrands.theexecutive.modules.shoppingBag.ShoppingBagResponse" />

    </data>



    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/eight_dp"
        android:layout_marginTop="@dimen/four_dp"
        android:layout_marginBottom="@dimen/four_dp">

        <ImageView
            android:id="@+id/img_product"
            android:layout_width="@dimen/one_ten_dp"
            android:layout_height="@dimen/one_sixty_dp"
            android:contentDescription="@string/product_image"
            app:layout_constraintBottom_toTopOf="@+id/tv_product_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread"
            bind:baseUrlWithProductImageUrl="@{item.extension_attributes.image}" />


        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/four_dp"
            android:gravity="center"
            android:maxLines="2"
            android:text="@{item.name}"
            android:textAllCaps="true"
            android:textSize="@dimen/fourteen_sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_product_qty"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_product" />

        <TextView
            android:id="@+id/tv_product_qty"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/four_dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:maxLines="2"
            android:text='@{@string/qty + " : " +  item.qty}'
            android:textSize="@dimen/twelve_sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_product_name" />
    </android.support.constraint.ConstraintLayout>


</layout>