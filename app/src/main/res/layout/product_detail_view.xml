<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/img_one"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:src="@drawable/one"
                    android:layout_marginRight="@dimen/twenty_dp"
                    android:layout_marginLeft="@dimen/twenty_dp"
                    android:scaleType="centerCrop"/>
                <ImageView
                    android:id="@+id/img_two"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:layout_marginRight="@dimen/twenty_dp"
                    android:layout_marginLeft="@dimen/twenty_dp"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:layout_below="@id/img_one"
                    android:src="@drawable/one"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/txt_details"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@id/img_two"
                    android:layout_marginTop="@dimen/fifty_dp"
                    android:textAlignment="center"
                    android:maxLines="10"
                    android:textStyle="bold"
                    android:text="Polo Shirt, Shirt coller,Short sleeve, Slim Fit Materail: Tetoron,Rayon Model Height : 186 CM Model wearing size M,Color: Grey"
                    />

                <TextView
                    android:id="@+id/txt_colors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Available colors"
                    android:layout_below="@id/txt_details"/>

                <LinearLayout
                    android:id="@+id/ll_color_choice"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@id/txt_colors"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:orientation="horizontal"/>

                <ImageView
                    android:id="@+id/img_random"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:layout_marginRight="@dimen/twenty_dp"
                    android:layout_marginLeft="@dimen/twenty_dp"
                    android:layout_below="@id/ll_color_choice"
                    android:scaleType="centerCrop"
                    android:src="@drawable/one" />

                <TextView
                    android:id="@+id/txt_composition_and_care"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_random"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:textStyle="bold"
                    android:text="Composition and Care"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/txt_size_guideline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_composition_and_care"
                    android:text="Size Guideline"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:textStyle="bold"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/txt_shipping"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_size_guideline"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:text="Shipping"
                    android:textStyle="bold"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/txt_return"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_shipping"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:text="Returns"
                    android:textStyle="bold"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/txt_share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_return"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:text="Share"
                    android:textStyle="bold"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/txt_buying_guidelinie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_share"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:text="Buying Gideline"
                    android:textStyle="bold"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/txt_chat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_buying_guidelinie"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:text="Chat"
                    android:textStyle="bold"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/txt_wishlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_chat"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:text="Add to wishlish"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <View
                    android:id="@+id/view_line"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/one_dp"
                    android:background="@color/theme_black_color"
                    android:layout_below="@id/txt_wishlist"
                    android:layout_marginTop="@dimen/twenty_dp"
                    />
                <TextView
                    android:id="@+id/txt_like"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="You Might Also Like"
                    android:gravity="center"
                    android:textSize="@dimen/twenty_dp"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:layout_below="@id/view_line"/>
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:layout_below="@id/view_line"
                    />
            </RelativeLayout>

        </ScrollView>

        <RelativeLayout
            android:id="@+id/relativebox"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="@color/white">

            <Button
                android:id="@+id/btn_add_to_bag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Bag"
                android:layout_marginTop="@dimen/twenty_dp"
                android:layout_marginLeft="@dimen/twenty_dp"
                android:padding="@dimen/ten_dp"
                android:background="@drawable/button_border"/>

            <TextView
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/btn_add_to_bag"
                android:layout_marginEnd="@dimen/twenty_dp"
                android:text="IDR  179,900" />

        </RelativeLayout>




    </RelativeLayout>



</layout>