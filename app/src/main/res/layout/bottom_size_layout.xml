<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentBottom="true"
            >

            <TextView
                android:id="@+id/tv_select_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_size"
                android:theme="@style/sub_heading_theme"
                android:layout_marginTop="@dimen/thirty_dp"
                android:layout_marginLeft="@dimen/twenty_dp"
                />

            <TextView
                android:id="@+id/tv_size_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/size_guide"
                android:theme="@style/sub_heading_theme"
                android:layout_marginTop="@dimen/thirty_dp"
                android:layout_marginRight="@dimen/twenty_dp"
                android:layout_alignParentRight="true"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_size"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/tv_select_size"
                android:layout_marginTop="@dimen/ten_dp"
                android:layout_marginLeft="@dimen/twenty_dp"
                >

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/tv_select_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_quantity"
                android:theme="@style/sub_heading_theme"
                android:layout_marginTop="@dimen/thirty_dp"
                android:layout_marginLeft="@dimen/twenty_dp"
                android:layout_below="@+id/rv_size"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/tv_select_quantity"
                android:layout_marginTop="@dimen/twenty_dp"
                android:layout_marginLeft="@dimen/twenty_dp"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back"
                    android:padding="@dimen/ten_dp"
                    />

                <TextView
                    android:id="@+id/tv_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_marginLeft="@dimen/thirty_dp"
                    />

                <ImageView
                    android:id="@+id/img_forward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/forward"
                    android:layout_marginLeft="@dimen/thirty_dp"
                    android:padding="@dimen/ten_dp"
                    />


            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>

</layout>